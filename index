<body>
  <h1>ðŸŽ§ 2-Second Audio Delay</h1>
  <p>Use headphones to avoid feedback.</p>
  <button id="start">Start Listening</button>

  <script>
    const button = document.getElementById("start");

    button.onclick = async () => {
      button.disabled = true;
      button.textContent = "Listeningâ€¦";

      // Create audio context
      const audioContext = new (window.AudioContext || window.webkitAudioContext)();

      // Ask for microphone access
      const stream = await navigator.mediaDevices.getUserMedia({ audio: true });

      // Create audio nodes
      const source = audioContext.createMediaStreamSource(stream);
      const delay = audioContext.createDelay(5.0); // max delay allowed
      delay.delayTime.value = 2.0; // 2 seconds

      // Connect nodes: mic â†’ delay â†’ speakers
      source.connect(delay);
      delay.connect(audioContext.destination);
    };
  </script>
</body>
